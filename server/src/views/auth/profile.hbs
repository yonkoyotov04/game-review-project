<section class="profile" id="profile">
    <div class="profile-header">
        <div class="profile-pic">
            <img src="{{user.profilePic}}" alt="Profile Picture">
        </div>
        <div class="profile-info">
            <h1 class="username">{{user.username}}</h1>
            {{#if user.bio}}
            <p class="user-bio">“{{user.bio}}”</p>
            {{/if}}
        </div>
    </div>

    <div class="reviews-showcase">
        <h3 class="reviews-title">Reviews</h3>

        <div class="reviews-container">
            <ul class="review-list">
                {{#each reviews}}
                <li class="review-list-item">
                    <div class="review-card">
                        <div class="review-header">
                            <div>
                                <span class="review-game-title">{{game.title}}</span>
                                <span><a href="/games/{{game.id}}/details"><img src="{{game.imageUrl}}"
                                            alt="{{game.title}}" class="game-icon"></a></span>
                            </div>
                            <div>
                                <a href="/reviews/{{id}}/edit"><svg style="margin-right: 10px;" width="24" height="24"
                                        viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                        <path d="M3 17.25V21h3.75L17.81 9.94l-3.75-3.75L3 17.25z" stroke="url(#grad)"
                                            stroke-width="2" fill="none" />
                                        <path
                                            d="M20.71 7.04c.39-.39.39-1.02 0-1.41l-2.34-2.34a1 1 0 0 0-1.41 0l-1.83 1.83 3.75 3.75 1.83-1.83z"
                                            stroke="url(#grad)" stroke-width="2" fill="none" />
                                        <defs>
                                            <linearGradient id="grad" x1="0" y1="0" x2="24" y2="24">
                                                <stop offset="0%" stop-color="#FF5E00" />
                                                <stop offset="100%" stop-color="#00B2FF" />
                                            </linearGradient>
                                        </defs>
                                    </svg>
                                </a>
                                <a href="/reviews/{{id}}/delete"><svg style="margin-right: 10px;" width="30" height="30"
                                        viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">

                                        <defs>
                                            <linearGradient id="trashLid" x1="0" y1="0" x2="24" y2="24">
                                                <stop offset="0%" stop-color="#FF5E00" />
                                                <stop offset="100%" stop-color="#00B2FF" />
                                            </linearGradient>
                                        </defs>

                                        <!-- Dome-shaped lid -->
                                        <path d="M5 7h14c0-2-2.5-4-7-4s-7 2-7 4z" stroke="url(#trashLid)"
                                            stroke-width="2" fill="none" stroke-linecap="round"
                                            stroke-linejoin="round" />

                                        <!-- Lid handle -->
                                        <path d="M9 5c0-1 1.5-2 3-2s3 1 3 2" stroke="url(#trashLid)" stroke-width="2"
                                            fill="none" stroke-linecap="round" />

                                        <!-- Trash can body -->
                                        <path d="M6 7v11c0 2 1.5 4 3 4h6c1.5 0 3-2 3-4V7" stroke="url(#trashLid)"
                                            stroke-width="2" fill="none" stroke-linejoin="round" />

                                        <!-- Slats -->
                                        <path d="M10 11v7" stroke="url(#trashLid)" stroke-width="2"
                                            stroke-linecap="round" />
                                        <path d="M14 11v7" stroke="url(#trashLid)" stroke-width="2"
                                            stroke-linecap="round" />
                                    </svg>
                                </a>
                            </div>
                        </div>
                        <p class="review-text">{{thoughts}}</p>
                        <div class="review-footer">
                            <span class="stars">⭐ {{rating}}/10</span>
                            <span class="playTime">⏲ {{playTime}} hours</span>
                        </div>
                    </div>
                </li>
                {{else}}
                <p class="section-title">There are no reviews yet...</p>
                {{/each}}
            </ul>
        </div>
        {{#if game.reviews}}
        <div class="reviews-pagination">
            <button class="page-btn prev">← Previous</button>
            <div class="page-numbers">
                <button class="page-number active">1</button>
                <button class="page-number">2</button>
                <button class="page-number">3</button>
            </div>
            <button class="page-btn next">Next →</button>
        </div>
        {{/if}}
    </div>

    {{#if isOwner}}
    <div class="profile-actions">
        <a href="/auth/profile/edit"><button class="edit-btn">Edit Profile</button></a>
        <a href="/auth/profile/delete"><button class="delete-btn">Delete Profile</button></a>
    </div>
    {{/if}}
</section>