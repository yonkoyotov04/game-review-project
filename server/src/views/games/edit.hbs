<section id="edit-game">
    <div class="game-form">
        <h3 class="form-title">Edit Game</h3>
        <form id="gameForm" method="POST">
            <div class="form-group">
                <label for="title">Title</label>
                <input type="text" id="title" name="title" value="{{game.title}}" required>
            </div>
            <div class="form-group">
                <label for="developers">Developers</label>
                <input type="text" id="developers" name="developers" value="{{game.developers}}" required>
            </div>
            <div class="form-group">
                <label for="genre">Genre</label>
                <select id="genre" name="genre">
                    <option value="">Select Category</option>
                    {{#each genres}}
                    <option value="{{value}}" {{selected}}>{{label}}</option>
                    {{/each}}
                </select>
            </div>
            <div class="form-group">
                <label for="relDate">Release Date</label>
                <input type="date" id="relDate" name="relDate" value="{{game.relDate}}" required>
            </div>
            <div class="form-group">
                <label for="platforms">Platforms</label>
                <input type="text" id="platforms" name="platforms" value="{{game.platforms}}" required>
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <textarea id="description" name="description" required>{{game.description}}</textarea>
            </div>
            <div class="form-group">
                <label for="imageUrl">Game Image</label>
                <input type="text" id="imageUrl" name="imageUrl" value="{{game.imageUrl}}" required>
            </div>
            <button type="submit" class="submit-btn">Edit Game</button>
        </form>
    </div>
</section>