<section class="games-list">
    <h2 class="section-title">All Games</h2>

    <!-- Search Bar -->
    <div class="search-bar">
        <form method="GET">
            <input type="text" id="gameSearch" name="title" value="{{filter.title}}" placeholder="Search for a game..." />
            <button type="submit" class="search-btn">Search</button>
        </form>
    </div>

    <!-- Game Grid -->
    <div class="square-game-grid">
        {{#each games}}
        <div class="square-game-card">
            <a href="/games/{{id}}/details"><img src="{{imageUrl}}" alt="{{title}}">
                <div class="square-game-info">
                    <h3>{{title}}</h3>
                </div>
            </a>
        </div>
        {{else}}
        <p class="section-title">There are no games yet...</p>
        {{/each}}
    </div>

    {{#if games}}
    <div class="reviews-pagination">
        <button class="page-btn prev">← Previous</button>
        <div class="page-numbers">
            <button class="page-number active">1</button>
            <button class="page-number">2</button>
            <button class="page-number">3</button>
        </div>
        <button class="page-btn next">Next →</button>
    </div>
    {{/if}}
</section>