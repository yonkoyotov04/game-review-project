<section id="register">
    <div class="auth-form">
        <h3 class="form-title">Add Game</h3>
        <form id="authForm" method="POST">
            <div class="form-group">
                <label for="title">Title</label>
                <input type="text" id="title" name="title" value="{{game.title}}" required>
            </div>
            <div class="form-group">
                <label for="director">Director</label>
                <input type="text" id="director" name="director" value="{{game.director}}" required>
            </div>
            <div class="form-group">
                <label for="genre">Genre</label>
                <select id="genre" class="inputFields" name="genre">
                    <option value="">Select Category</option>
                    {{#each genres}}
                    <option value="{{value}}" {{selected}}>{{label}}</option>
                    {{/each}}
                </select>
            </div>
            <div class="form-group">
                <label for="relDate">Release Date</label>
                <input type="date" id="relDate" name="relDate" value="{{game.relDate}}" required>
            </div>
            <div class="form-group">
                <label for="platforms">Platforms</label>
                <input type="text" id="platforms" name="platforms" value="{{game.platforms}}" required>
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <textarea id="description" name="description" required>{{game.description}}</textarea>
            </div>
            <div class="form-group">
                <label for="imageUrl">Game Image</label>
                <input type="text" id="imageUrl" name="imageUrl" value="{{game.imageUrl}}" required>
            </div>
            <button type="submit" class="submit-btn">Add Game</button>
        </form>
    </div>
</section>